<body id="top">
<%= flash_messages %>

<div id="overlayer"></div>
<div class="loader">
  <div class="spinner-border text-primary" role="status">
    <span class="sr-only">Loading...</span>
  </div>
</div>


<div class="site-wrap">

  <div class="site-mobile-menu site-navbar-target">
    <div class="site-mobile-menu-header">
      <div class="site-mobile-menu-close mt-3">
        <span class="icon-close2 js-menu-toggle"></span>
      </div>
    </div>
    <div class="site-mobile-menu-body"></div>
  </div> <!-- .site-mobile-menu -->


  <!-- NAVBAR -->
  <%= render partial: 'shared/header' %>


  <!-- HOME -->
  <section class="section-hero overlay inner-page bg-image" style="background-image: url('/assets/hero_1.jpg');" id="home-section">
    <div class="container">
      <div class="row">
        <div class="col-md-7">
          <h1 class="text-white font-weight-bold">Contact Us</h1>
          <div class="custom-breadcrumbs">
            <a href="#">Home</a> <span class="mx-2 slash">/</span>
            <span class="text-white"><strong>Contact Us</strong></span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="site-section" id="next-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <%= form_for(:contacts, url: contacts_path) do |f| %>
            <div class="row form-group">
              <div class="col-md-6 mb-3 mb-md-0">
                <label class="text-black" for="fname">First Name</label>
                <%= f.text_field :first_name, id: "fname", class: "form-control" %>
              </div>
              <div class="col-md-6">
                <label class="text-black" for="lname">Last Name</label>
                <%= f.text_field :last_name, id: "lname", class: "form-control" %>
              </div>
            </div>
            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="email">Email</label>
                <%= f.email_field :last_name, id: "email", class: "form-control" %>
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="subject">Subject</label>
                <%= f.text_area :subject, id: "subject", class: "form-control" %>
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="subject">Phone Number</label>
                <%= f.text_area :phone_number, id: "phone", class: "form-control" %>
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-12">
                <label class="text-black" for="message">Message</label>
                <%= f.text_area :message, id: "message", class: "form-control", cols: "30", rows: "7", placeholder: "Write your notes or questions here..." %>
              </div>
            </div>

            <div class="row form-group">
              <div class="col-md-12">
                <%= f.submit "Log in", value: "Send Message", class: "btn btn-primary btn-md text-white" %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-lg-5 ml-auto">
          <div class="p-4 mb-3 bg-white">
            <p class="mb-0 font-weight-bold">Address</p>
            <p class="mb-4"><%= @address.my_address %></p>

            <p class="mb-0 font-weight-bold">Phone</p>
            <p class="mb-4"><a href="#"><%= @address.phone_number %></a></p>

            <p class="mb-0 font-weight-bold">Email Address</p>
            <p class="mb-0"><a href="#"><%= @address.email %></a></p>

          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="site-section bg-light">
    <div class="container">
      <div class="row mb-5">
        <div class="col-12 text-center" data-aos="fade">
          <h2 class="section-title mb-3">Happy Candidates Says</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="block__87154 bg-white rounded">
            <blockquote>
              <p>&ldquo;Ipsum harum assumenda in eum vel eveniet numquam cumque vero vitae enim cupiditate deserunt
                eligendi officia modi consectetur. Expedita tempora quos nobis earum hic ex asperiores quisquam optio
                nostrum sit&rdquo;</p>
            </blockquote>
            <div class="block__91147 d-flex align-items-center">
              <figure class="mr-4"><img src="/assets/person_1.jpg" alt="Image" class="img-fluid"></figure>
              <div>
                <h3>Elisabeth Smith</h3>
                <span class="position">Creative Director</span>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="block__87154 bg-white rounded">
            <blockquote>
              <p>&ldquo;Ipsum harum assumenda in eum vel eveniet numquam, cumque vero vitae enim cupiditate deserunt
                eligendi officia modi consectetur. Expedita tempora quos nobis earum hic ex asperiores quisquam optio
                nostrum sit&rdquo;</p>
            </blockquote>
            <div class="block__91147 d-flex align-items-center">
              <figure class="mr-4"><img src="/assets/person_2.jpg" alt="Image" class="img-fluid"></figure>
              <div>
                <h3>Chris Peter</h3>
                <span class="position">Web Designer</span>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </section>

</div>